@rendermode InteractiveServer
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ToDoListBlazor</a>
    </div>
</div>

<div>
    <input type="checkbox" title="Navigation menu" class="navbar-toggler" />

    <div class="nav-scrollable">
        <nav class="flex-column">

            <button @onclick="CreateNewTask" class="navbutton">Создать новую задачу</button>
            @foreach (var problem in problems)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@($"?task={problem}")" Match="NavLinkMatch.All">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Задача @problem
                    </NavLink>
                </div>
            }

            @code {
                private List<string> problems = new List<string>();

                private int problemCount = 1;

                private void CreateNewTask()
                {
                    problems.Add($"{problemCount}");
                    problemCount++;
                }
            }

        </nav>
    </div>
</div>